{
  "manifest_version": 3,
  "name": "AI Job Analyzer",
  "version": "1.0",
  "description": "Analyze job descriptions and match resumes using AI",

"permissions": [
  "activeTab",
  "tabs",
  "scripting"
],

  "host_permissions": [
    "https://jobai-production-cf74.up.railway.app/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
