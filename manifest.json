{
  "manifest_version": 3,
  "name": "AI Job Analyzer",
  "description": "Analyze job descriptions and match your resume before applying",
  "version": "1.0.0",

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://jobai-production-cf74.up.railway.app/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
